# Configuration file to install the recipe dependencies inside the Podman container

FROM debian:bookworm-20240513-slim

# _UID_ must be replaced with the user's uid on host
# podman root is mapped to your user id on host during build,
# poduser is mapped to your user id during podman run
RUN useradd --create-home --no-log-init --uid _UID_ poduser \
    && chown -R root:root /home \
    && apt-get update \
    && apt-get install -y --no-install-recommends \        
		appstream \
		ant \
		autoconf \
		automake \
		autopoint \
		bison \
		build-essential \
		clang \
		cmake \
		curl \
		dos2unix \
		doxygen \
		file \
		flex \
		fuse3 \
		g++ \
		genisoimage \
		git \
		git-lfs \
		gperf \
		expect \
		intltool \
		libc6-dev-i386 \
		libexpat-dev \
		libfuse3-dev \
		libfontconfig1-dev \
		libgmp-dev \
		libhtml-parser-perl \
		libjpeg-dev \
		libmpfr-dev \
		libpng-dev \
		libsdl1.2-dev \
		libsdl2-ttf-dev \
		llvm \
		lua5.4 \
		lzip \
		m4 \
		make \
		meson \
		nasm \
		ninja-build \
		ssh \
		patch \
		perl \
		pkg-config \
		po4a \
		protobuf-compiler \
		python3 \
		python3-mako \
		rsync \
		scons \
		syslinux-utils \
		texinfo \
		unzip \
		wget \
		xdg-utils \
		xxd \
		zip \
		zlib1g-dev \
		zstd \
		help2man \
		autoconf2.69 \
    	patchelf
